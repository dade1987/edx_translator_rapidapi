{
    "manifest_version": 3,
    "author-one": "Davide Cavallini",
    "author-two": "Riccardo Laurenti",
    "name": "edx_translator_rapidapi",
    "description": "Plugin used to translate Edx explanation videos. It is not official as a plugin and is free",
    "version": "1.0",
    "action": {
        "from_language": "en",
        "to_language": "it",
        "default_icon": {
            "D-C-R": "d-c-r.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "translator.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "host_permissions": [
        "https://rapidapi.com/"
    ],
    "icons": {
        "D-C-R": "d-c-r.png"
    }
}